            a(href='blog.html') БЛОГ
            
        .header__cta
          a(href="tel:+78007008472").header__phone +7 (800) 700-84-72
        
        a(href='#' js-open-mobile data-target="mobile-search").header__search
          +icon('ico-search')
  
  // search
  .header-search
    .container
      .header-search__wrapper
        .header-search__input
          .ui-group.ui-group--search
            input(type="text" placeholder="Ищите по расположению или особенности объекта. Например, “гараж” или “Десеновское поселение”." js-search-hints)
