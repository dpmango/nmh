// HERO
.hero
  .container
    .hero__wrapper
      .b-heading.b-heading--white
        h1.heading.wow Позвольте найти ваш дом
        .subheading.wow(data-animation-delay=".1s") дома, таунхаусы и земельные участки в Новой Москве
      
      .hero__search
        .search-form(action="#")
          .search-form__name.wow(data-animation-delay=".3s")
            .ui-group.ui-group--search
              input(type="text" placeholder="Название" js-autocomplete data-url="json/cities.json")
              +icon('ico-search')
          .search-form__category.wow(data-animation-delay=".4s")
            label категория
            .ui-group
              select(js-selectric placeholder="Категория")
                option Дом
                option Участок
                option Таунхаус
                
          .search-form__price.wow(data-animation-delay=".5s")
            label стоимость
            .search-form__price-row
              .ui-group
                input(type="text" placeholder="от" js-mask-number)
              .ui-group
                input(type="text" placeholder="до" js-mask-number)
          
          .search-form__cta.wow(data-animation-delay=".6s")
            button(type="submit").btn.btn-primary
              span поиск
