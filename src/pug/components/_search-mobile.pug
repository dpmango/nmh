  .m-search__head
    .m-search__clear(js-open-mobile data-target="mobile-filter")
      +icon('ico-back')
    .m-search__head-title Тип ремонта
    .m-search__close(js-close-mobile)
      //- +icon('ico-close')
  .m-search__wrapper()
    form(action="#").m-search__form.m-search__form--no-pad

      .ui-checkbox.ui-checkbox--right
        input(type="checkbox" name="filter" id="filter_11")
        label(for="filter_11") 
          span “под ключ” (25)
      .ui-checkbox.ui-checkbox--right
