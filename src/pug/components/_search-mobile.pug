// MOBILE SEARCH
.m-search.m-search--left.m-search--filter(data-name="mobile-filter")
  .m-search__head
    .m-search__clear(js-reset-mobile-filter) Сбросить
    .m-search__head-title Фильтры
    .m-search__close(js-close-mobile)
      +icon('ico-close')
  .m-search__wrapper()
    form(action="#").m-search__form
      //slider group
      .slider-group
        label Цена
        .slider-group__wrap
          .slider-group__set 
            span(js-range-from) 0 
            |  — 
            span(js-range-to) 50 000 000
          div(js-rangeslider 
              data-start-from="0"
              data-start-to="35000000"
              data-step="100000"
              data-range-min="0"
              data-range-max="50000000")
          
      //slider group
      .slider-group
        label Кв. м
        .slider-group__wrap
          .slider-group__set 
            span(js-range-from) 0 
            |  — 
            span(js-range-to) 300
          div(js-rangeslider 
              data-start-from="0"
              data-start-to="200"
              data-step="10"
              data-range-min="0"
              data-range-max="300")
      
      //slider group
      .slider-group
        label Участок (сот.)
        .slider-group__wrap
          .slider-group__set 
            span(js-range-from) 0 
            |  — 
            span(js-range-to) 300
          div(js-rangeslider 
              data-start-from="0"
              data-start-to="7"
              data-step="1"
              data-range-min="0"
              data-range-max="15")
      
      //slider group
      .slider-group
        label Спальни
        .slider-group__wrap
          .slider-group__set 
            span(js-range-from) 0 
            |  — 
            span(js-range-to) 300
          div(js-rangeslider 
              data-start-from="0"
              data-start-to="5"
              data-step="1"
              data-range-min="0"
              data-range-max="5")
                                            
      //slider group
      .slider-group
        label км от МКАД
        .slider-group__wrap
          .slider-group__set 
            span(js-range-from) 0 
            |  — 
            span(js-range-to) 300
          div(js-rangeslider 
              data-start-from="0"
              data-start-to="35"
              data-step="1"
              data-range-min="0"
              data-range-max="35")
      
      .m-search__next(js-open-mobile data-target="mobile-type")
        span Тип ремонта
        +icon('ico-arrow-right')
                
      // keywords
      .m-search__keywords
        label ПОИСК ПО КЛЮЧЕВЫМ СЛОВАМ
        .ui-group.ui-group--search
          input(type="text" placeholder="Название" js-autocomplete data-url="json/cities.json")
          +icon('ico-search')
          
      .m-search__cta
        button(type="submit").btn.btn-primary показать все предложения (20)




// TYPE FILTER
