        label(for="filter_21") 
          span “под финишную отд. (25)
      .ui-checkbox.ui-checkbox--right
        input(type="checkbox" name="filter" id="filter_31")
        label(for="filter_31") 
          span “без отделки” (25)
              
      .m-search__cta
        button(type="submit").btn.btn-primary показать все предложения (20)




// MOBILE SORTING
.m-search(data-name="mobile-sorting")
  .m-search__head
    .m-search__clear(js-reset-mobile-filter) Сбросить
    .m-search__head-title Сортировка
    .m-search__close(js-close-mobile)
      +icon('ico-close')
  .m-search__wrapper()
    form(action="#").m-search__form

      // categories
      .m-search__categories
        label по цене
        .m-search__categories-wrap(js-scrollbar data-y-disable="true")
          .m-search__category
            input(type="radio" name="sorting" id="sorting_1" checked)
            label(for="sorting_1")
              span Возрастание
          .m-search__category
            input(type="radio" name="sorting" id="sorting_2")
            label(for="sorting_2")
              span Убывание

      // categories
      .m-search__categories
        label по дате добавления
        .m-search__categories-wrap(js-scrollbar data-y-disable="true")
          .m-search__category
            input(type="radio" name="sorting" id="sorting_3")
            label(for="sorting_3")
              span Сначала новые
          .m-search__category
            input(type="radio" name="sorting" id="sorting_4")
            label(for="sorting_4")
              span Сначала старые
              
      .m-search__cta
        button(type="submit").btn.btn-primary Применить
