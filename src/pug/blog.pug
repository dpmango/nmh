extends shared/_layout
block content

  // blog
  .blog.blog--inner
    .container
      .b-heading
        h1.heading.wow Блог
      
      // categories
      .blog-categories(js-slider-categories).wow.swiper-container
        .swiper-wrapper
          a(href="#").swiper-slide.is-active Последние записи
          a(href="#").swiper-slide Советы
          a(href="#").swiper-slide Обзоры
          a(href="#").swiper-slide Новости
          a(href="#").swiper-slide Видео обзоры
          a(href="#").swiper-slide Новости компании
        
      // grid
      .blog__grid
        .blog__col.wow(data-animation-delay=".3s")
          .blog-card
            a(href='blog-post.html').blog-card__image
              img(src='img/blogImage_1.jpg' srcset='img/blogImage_1@2x.jpg 2x')
            a(href='blog-post.html').blog-card__content
